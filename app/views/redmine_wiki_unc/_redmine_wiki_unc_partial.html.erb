<%
  header_tags_content = content_for(:header_tags)
  if header_tags_content.present?
    content_for :header_tags do
      javascript_include_tag('redmine_wiki_unc_replace_path.js', plugin: 'redmine_wiki_unc') +
      stylesheet_link_tag('redmine_wiki_unc.css', plugin: 'redmine_wiki_unc') +
      javascript_include_tag('clipboard.min.js', plugin: 'redmine_wiki_unc')
    end
  end

  if header_tags_content.present? && header_tags_content.include?('/jstoolbar/')
    content_for :header_tags do
      javascript_include_tag('redmine_wiki_unc.js', plugin: 'redmine_wiki_unc', 'id' => 'js-redmine-wiki-unc-script-tag', 'data-text-formatting' => Setting.text_formatting)
    end
  end
%>
<% if header_tags_content.present? && header_tags_content.include?('/jstoolbar/') %>
  <script type="text/javascript">
  //<![CDATA[
  let WikiUnc = {context: {
    labelInsertLink: "<%= l(:label_insert_link) %>",
    labelTryLink: "<%= l(:label_try_link) %>",
    labelAddress: "<%= l(:label_address) %>",
    labelTextToDisplay: "<%= l(:label_text_to_display) %>",
    labelDecode: "<%= l(:label_decode) %>",
    labelRegenerateTextToDisplay: "<%= l(:label_regenerate_text_to_display) %>",
    buttonCancel: "<%= l(:button_cancel) %>"
  }};
  //]]>
  </script>
<% end %>